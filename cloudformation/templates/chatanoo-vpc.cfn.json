  "Resources": {

    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {
          "Fn::FindInMap": ["Region2VpcCidr", { "Ref" : "AWS::Region" }, "VpcCidr"]
        },
        "Tags": [{
          "Key": "Name",
          "Value": { "Fn::Join": [" ", [{ "Ref": "ProjectName" }, "VPC"]] }
        }, {
          "Key": "chatanoo:client",
          "Value": { "Ref": "ProjectName" }
        }, {
          "Key": "chatanoo:project",
          "Value": "Network"
        }, {
          "Key": "chatanoo:environment",
          "Value": "Infra"
        }, {
          "Key": "chatanoo:access",
          "Value": "PublicAndPrivate"
        }, {
          "Key": "chatanoo:region",
          "Value": { "Ref": "AWS::Region" }
        }]
      }
    },

    "PublicSubnet1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": {
          "Fn::FindInMap": ["Region2VpcCidr", { "Ref" : "AWS::Region" }, "PublicSubnet1Cidr"]
        },
        "AvailabilityZone": {
          "Ref": "VPCAvailabilityZone1"
        },
        "Tags": [{
          "Key": "Name",
          "Value": { "Fn::Join": [" ", [{ "Ref": "ProjectName" }, "PublicSubnet1", { "Ref": "VPCAvailabilityZone1" }]] }
        }, {
          "Key": "chatanoo:client",
          "Value": { "Ref": "ProjectName" }
        }, {
          "Key": "chatanoo:project",
          "Value": "Network"
        }, {
          "Key": "chatanoo:environment",
          "Value": "Infra"
        }, {
          "Key": "chatanoo:access",
          "Value": "Public"
        }, {
          "Key": "chatanoo:region",
          "Value": { "Ref": "AWS::Region" }
        }]
      }
    },

    "PublicSubnet2": {
      "Type": "AWS::EC2::Subnet",
